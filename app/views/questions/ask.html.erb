

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <form action="/answer" method="post">
        <h1>Stupid coach</h1>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="row">
          <div class="col-xs-6">
            <p>Ask your coach anything:</p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <input type="text" name="question" placeholder="How are you?" class="form-control">
          </div>
          <div class="col-xs-3">
            <input type="submit" value="Ask!" class="btn btn-primary">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
