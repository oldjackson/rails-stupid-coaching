<div class="container">
  <h1>Stupid Coaching</h1>

  <div class="bubble">
    <div class="spacer"></div>
    <div class="sentence">
      <p>
        <%= @question %>
        <br>
        <em>-You</em>
      </p>
    </div>
  </div>

  <div class="bubble">
    <div class="spacer"></div>
    <div class="sentence answer">
      <p>
        <%= @answer %>
        <br>
        <em>-Your coach</em>
      </p>
    </div>
  </div>
  <p><%= link_to "Ask a new question", ask_path %></p>
</div>
